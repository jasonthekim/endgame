FROM centos:7.9.2009

RUN yum update -y && \
    yum install -y python3

RUN pip3 install Flask==2.0.3 \
                 pytest==7.0.0 \
                 json==0.12.0       #library?

COPY flask_api.py /data/flask_api.py
COPY test_flask.py /data/test_flask.py
COPY comets_data.json /data/comets_data.json

WORKDIR /data/

CMD ["python3", "/data/flask_api.py"]
